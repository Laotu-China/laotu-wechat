/* miniprogram/pages/events.wxss */
page{
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction: column;
}


#bodyContainer{
  /* Take up the rest of the space apart from Nav, Search, and Tab */
  flex-grow: 1;
  background-color: darksalmon;
}

.card{
  width: 100%;
  height: 30vh;
  display: flex;
  background-color: gainsboro;
  border-style: solid;
}
.imageContainer{
  height: 100%;
  width: 40%;
  background-color: darkseagreen;
}
.descContainer{
  height: 100%;
  flex-grow: 1;
  background-color: darkturquoise;
}
