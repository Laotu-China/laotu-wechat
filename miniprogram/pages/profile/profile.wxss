view {
  box-sizing: border-box;
}

#body_container{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  /*background-color: blue;*/
  width: 750rpx;
  height: 90vh;
}

#profile_container {
  width: 700rpx;
  height: 15vh;
  /*background-color: red;*/
  display: flex;
  flex-direction: row;
  align-items: center;
  border-color: black;
  border-style: solid;
  border-radius: 2vw;
}

#picture_container{
  height: 80%;
  border-radius: 50%;
  margin-left: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
#profile_text-container{
  height: 100%;
  /*background-color: orange;*/
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10%;
  overflow: hidden;
}


#icons_container{
  width: 700rpx;
  height: 15vh;
  /*background-color: beige;*/
  font-size: 12vw;
  display: flex;
  justify-content: space-evenly;

}

.icon_container{
  height: 100%;
  /*width will be determined in JS */
  /*background-color: brown;*/
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon_nav{
  height: 80%;
  width: 80%;
  /*background-color: lightcyan;*/
}

.icon_text{
  height: 20%;
  width: 100%;
  /*background-color: turquoise;*/
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 3vh;
}

.icon{
  border-style: solid;
  border-color: black;
  border-radius: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon > image{
  height: 70%;
  width: 70%;
}



#table_container{
  width: 700rpx;
  height: 50vh;
  /*background-color: orange;*/
  display: flex;
  flex-direction: column;
  border-style: solid;
  border-radius: 20rpx;
}

#table_container > navigator{
  flex-grow: 1;
}

.table_text{
  font-size: 4vh;
}

.tr_container{
  width: 100%;
  /*background-color: orchid;*/
}

.tr{
  width: 100%;
  height: 100%; 
  display: flex;
  /*background-color: brown;*/
  justify-content: space-between;
  align-items: center;
}

/* Text is 80%, width is 20% */
.table_text{
  /*background-color: lightpink;*/
  width: 80%;
  height: 100%;
  display: flex;
  align-items: center;
}
.table_text > text{
  margin-left: 5%;
}
.next_icon{
  /*background-color: lightsalmon;*/
  height: 100%;
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.next_icon > image{
  height: 60%;
  width: 60%;
}

#nav_container{
  width: 750rpx;
  height: 10vh;
  background-color: yellowgreen;
}





