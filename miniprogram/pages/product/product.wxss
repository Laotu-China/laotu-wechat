/* miniprogram/product.wxss */
page{
  height: 100%;
  width: 750rpx;
  background-color: violet;
  display: flex;
  flex-direction: column;
}

#body_container{
  background-color: wheat;
  width: 100%;
  /* The body container should take up the rest of the screen height apart from navbar */
  flex-grow: 1;
  display: flex;
}

#vertical_tabs_container{
  background-color: tomato;
  /* 15% width */
  width: 15%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

#table_container{
 /* take up the rest of the body width */
 flex-grow: 1;
 height: 100%;
 background-color: whitesmoke;
}

.categoryTab{
  background-color: lightblue;
  min-height: 5em;
  display: flex;
  justify-content: center;
  align-items: center;
}

.categoryTabSelected{
  background-color: lightgreen;
  min-height: 5em;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 10rpx solid;
  transition: background-color 500ms;
  transition: border-left 500ms;
}

.productContainer{
  width: 100%;
  height: 20%;
  display: flex;
  padding: 20rpx 20rpx 20rpx 20rpx;
  background-color: rgb(14, 131, 14);
}

.productImageContainer{
  height: 100%;
  width: 40%;
  overflow: hidden;
  background-color: lightpink;
}

.descriptionContainer{
  height: 100%;
  flex-grow: 1;
}



