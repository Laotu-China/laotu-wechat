* Consider making the swiper container square and having a policy where the uploaded images must be square
/* miniprogram/pages/item.wxss */
page{
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction: column;
}
#body{
  /* Body will take up the rest of the space apart from the navbar and tabbar */
  flex-grow: 1;
  background-color: lightpink;
  display: flex;
  flex-direction: column;
  width: 750rpx;
}

@import "../template/template.wxss";

#swiperContainer{
  /*Have the swiper be 40% of the body */
  height: 40%;
  width: 100%;
  background-color: lightsteelblue;
}
#customDescContainer{
  flex-grow: 1;
  width: 750rpx;
  display: flex;
  background-color: lightgoldenrodyellow;
}

.descContainer{
  /* Inherit the height of customDescContainer */
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: darkgray;
}

.priceCard{
  /* Has two block elements- the title row and the main row */
  display: block;
  padding: 20rpx 20rpx 20rpx 20rpx;
  background-color: crimson;
  min-height: 200px;
  height: 40%;
  width: 100%; 
}
#titleRow{
  display: flex;

}
.mp-icon-hover{
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.descBox {
  background-color: darkgoldenrod;
  width: 100%;
  /* Take up the rest of the description container height */
  flex-grow: 1;
}

#descPriceRow{
  display: flex;
  padding: 3rpx 3rpx 3rpx 3rpx;

}

CustomTabBar{
  /* position it at the very bottom */
  margin-top: auto;
}

